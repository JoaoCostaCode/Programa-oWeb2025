{{#if error}}
  <div class="alert alert-danger" role="alert">
    {{error}}
  </div>
{{/if}}

<form action="/user/update/{{user.id}}" method="post">
  <div class="row mb-2">
    <label for="name" class="col-sm-2 col-form-label">Nome</label>
    <div class="col-sm-5">
      <input type="text" class="form-control" id="name" name="name" value="{{user.name}}" placeholder="Digite seu nome completo" required>
    </div>
  </div>

  <div class="row mb-2">
    <label for="email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-5">
      <input type="email" class="form-control" id="email" name="email" value="{{user.email}}" placeholder="exemplo@email.com" required>
    </div>
  </div>

  <div class="row mb-3">
    <label for="majorSelect" class="col-sm-2 col-form-label">Curso</label>
    <div class="col-sm-5">
      <select class="form-select" id="majorSelect" name="major_id" required>
        <option selected disabled value="">Selecione um curso</option>
        {{#each majors}}
          <option value="{{this.id}}">{{this.name}} ({{this.code}})</option>
        {{/each}}
      </select>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-sm-10 offset-sm-2">
      <button type="submit" class="btn btn-primary">Atualizar</button>
    </div>
  </div>
</form>
